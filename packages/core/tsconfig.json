{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "dist",
    "target": "es5",
    "module": "commonjs",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "declaration": true,
    "noEmit": false
  },
  "include": ["src"]
}
